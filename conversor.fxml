<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.conversor.controllers.ConversorController"
            prefWidth="400.0" prefHeight="400.0">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Conversor de Unidades">
            <font>
                <Font name="System Bold" size="20"/>
            </font>
        </Label>

        <ComboBox fx:id="cmbCategoria" promptText="Seleccionar categorÃ­a" prefWidth="250"/>

        <HBox spacing="10" alignment="CENTER">
            <ComboBox fx:id="cmbUnidadOrigen" promptText="Unidad origen" prefWidth="120"/>
            <ComboBox fx:id="cmbUnidadDestino" promptText="Unidad destino" prefWidth="120"/>
        </HBox>

        <TextField fx:id="txtValor" promptText="Ingrese valor" prefWidth="250"/>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Convertir" onAction="#convertir" prefWidth="100"/>
            <Button text="Limpiar Campos" onAction="#limpiarCampos" prefWidth="120"/>
            <Button text="Limpiar Historial" onAction="#limpiarHistorial" prefWidth="120"/>
        </HBox>

        <Label fx:id="lblResultado" text="Resultado">
            <font>
                <Font name="System" size="16"/>
            </font>
        </Label>

        <TextArea fx:id="txtHistorial" editable="false" prefRowCount="8" prefWidth="350" wrapText="true" />
    </VBox>
</AnchorPane>

